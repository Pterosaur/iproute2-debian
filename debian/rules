#!/usr/bin/make -f

LDFLAGS="`dpkg-buildflags --get LDFLAGS`"
CCOPTS="`dpkg-buildflags --get CFLAGS` `dpkg-buildflags --get CPPFLAGS`"

%:
	dh $@

override_dh_clean:
	dh_clean
	make distclean
	-rm -f doc/*.txt

override_dh_installexamples:
	dh_installexamples -p iproute-doc examples/*

override_dh_shlibdeps:
	dh_shlibdeps -a -Xq_atm.so -Xm_xt.so -Xm_ipt.so

override_dh_auto_build:
	$(MAKE) -C doc all txt
	#$(MAKE) KERNEL_INCLUDE=./include
	dh_auto_build -- CCOPTS=$(CCOPTS) LDFLAGS=$(LDFLAGS)
